<div id="order-confirmation" v-cloak>
  <div class="container">
    <div class="row">
      <div class="col-md-12 mt-3 mb-2">
        <h4>Order Successful</h4>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card mb-3">
          <div class="card-header">
            User Details
          </div>
          <div class="card-body">
            <div class="mb-2">
              <div><small>User Name</small></div>
              <div>{{loadedOrder.User || 'Guest'}}</div>
            </div>
            <div>
              <div><small>Order Recovery Keyword</small></div>
              <div>{{loadedOrder.CustomerKeyword}}</div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <div class="card mb-3">
          <div class="card-header">
            Order Infomation
          </div>
          <div class="card-body">
            <div>
              <table class="table">
                <tr>
                  <th>
                    Order Number
                  </th>
                  <th>
                    Starting Date
                  </th>
                  <th>
                    Ending Date
                  </th>
                  <th>
                    Days of Use
                  </th>
                  <th>
                    Time Created
                  </th>
                </tr>
                <tr>
                  <td>
                    {{loadedOrder.id}}
                  </td>
                  <td>
                    {{moment(loadedOrder.DateStart).format("LL")}}
                  </td>
                  <td>
                    {{moment(loadedOrder.DateEnd).format("LL")}}
                  </td>
                  <td>
                    {{loadedOrder.DaysOfUse}}
                  </td>
                  <td>
                    {{loadedOrder.createdAt}}
                  </td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card mb-3">
          <div class="card-header">
            Order Items
          </div>
          <div class="card-body">
            <table class="table">
              <tr>
                <th>
                </th>
                <th>
                  Name
                </th>
                <th>
                  Unit Price
                </th>
                <th>
                  Quantity In Order
                </th>
                <th>
                  Total Price
                </th>
              </tr>
              <tr v-for="orderLine in orderWithAllData.OrderLineNumbers" v-if="orderLine.Glass !== null">
                <td>
                  <img height="100px" :src="orderLine.glassDetails.ImgSrc" />
                </td>
                <td>
                  {{ orderLine.glassDetails.NameEng }}
                  {{ orderLine.glassDetails.NameJap }}
                </td>
                <td>
                  짜{{ orderLine.UnitPrice }}
                </td>
                <td>
                  짜{{ orderLine.Quantity }}
                </td>
                <td>
                  짜{{ orderLine.UnitPrice * orderLine.Quantity }}
                </td>
              </tr>
            </table>
            <div class="row">
              <div class="col-md-12 text-right">
                <h4>
                  <div>Total</div>
                  <div>짜{{orderWithAllData.TotalPrice}}</div>
                </h4>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
